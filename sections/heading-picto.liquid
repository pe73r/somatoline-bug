<section class="{% if section.settings.section_border %} section--bordered {% endif %}">
   <div class="section-heading-with-picto">
     <div class="container">
        <div class="heading-picto__wrapper">
          {%- if section.settings.svg != blank -%}
            <div class="heading__picto">
              <img src="{{ section.settings.svg }}" alt="{{ section.settings.svg }}">
            </div>
          {% else %}
            {%- if section.settings.image != blank -%}
               <div class="heading__picto">
                 <img style="width: {{ section.settings.image_width }}px" loading="lazy" sizes="{{ section.settings.image_width }}px" class="footer__image" {% render 'image-attributes', image: section.settings.image, sizes: '100, 200, 300, 400, 500, 600' %}>
               </div>
            {%- endif -%}
          {%- endif -%}
          <div class="heading__content hidden-phone">
              {{ section.settings.heading }}
          </div>
          <div class="heading__content hidden-tablet hidden-lap-and-up">
              {{ section.settings.heading_mobile }}
          </div>
        </div>
     </div>
  </div>
</section>
{% schema %}
{
  "name": "Heading with picto",
  "settings": [
        {
          "type": "checkbox",
          "id": "section_border",
          "label": "Section border ?",
          "default": true
        },
        {
          "type": "text",
          "id": "svg",
          "label": "Picto svg"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Picto png"
        },
        {
          "type": "range",
          "id": "image_width",
          "min": 50,
          "max": 500,
          "step": 10,
          "unit": "px",
          "label": "Width",
          "default": 150,
          "info": "only for png image"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "DES FORMULES TESTÉES ET APPROUVÉES PAR UN LABORATOIRE INDÉPENDANT"
        },
        {
          "type": "textarea",
          "id": "heading_mobile",
          "label": "Heading mobile",
          "default": "DES FORMULES TESTÉES ET APPROUVÉES PAR UN LABORATOIRE INDÉPENDANT"
        }

  ],
  "presets": [
    {
      "name": "Heading with picto",
      "settings": {}
    }
  ]
}
{% endschema %}
